<div class="svg-gallery">
	<Svg1 
		@strokeWidth={{strokeWidth}} 
		@activeBrandColor={{activeBrandColor}}
		@activeBgColor={{activeBgColor}}
		@activeStrokeColor={{activeStrokeColor}}
		class="illo">
	</Svg1>
	<Svg2 
		@strokeWidth={{strokeWidth}} 
		@activeBrandColor={{activeBrandColor}}
		@activeBgColor={{activeBgColor}}
		@activeStrokeColor={{activeStrokeColor}}
		class="illo">
	</Svg2>
	<Svg3 
		@strokeWidth={{strokeWidth}} 
		@activeBrandColor={{activeBrandColor}}
		@activeBgColor={{activeBgColor}}
		@activeStrokeColor={{activeStrokeColor}}
		class="illo">
	</Svg3>
</div>

<section class="configuration clear-selections">
	{{#if displayClearButton}}
		<button {{action "clearActiveColors"}}>Clear Selections</button>
		<button class="primary">Save Selections</button>
	{{/if}}
</section>

<section class="configuration">
	<div class="configuration__brand_color category">
		<h3>Primary Brand Color: </h3>
		
		<section class="color-swatch-gallery">
			{{#each brandColorList as |color|}}
		    	<button 
		    		class="color-swatch"
		    		style="background-color: {{color.color}}"
		    		onclick={{action "updateActiveBrandColor"}}
		    		value={{color.color}}
		    	></button>
		  	{{/each}}
	  	</section>
	</div>
	<div class="configuration__bg_color category">
		<h3>Background Color: </h3>
		
		<section class="color-swatch-gallery">
			{{#each bgColorList as |color|}}
		    	<button 
		    		class="color-swatch"
		    		style="background-color: {{color.color}}"
		    		onclick={{action "updateActiveBgColor"}}
		    		value={{color.color}}
		    	></button>
		  	{{/each}}
			{{#each brandColorList as |color|}}
		    	<button 
		    		class="color-swatch"
		    		style="background-color: {{color.color}}"
		    		onclick={{action "updateActiveBgColor"}}
		    		value={{color.color}}
		    	></button>
		  	{{/each}}
	  	</section>
	</div>
	<div class="configuration__stroke_color category">
		<h3>BG Stroke Color: </h3>
		
		<section class="color-swatch-gallery">
			{{#each bgColorList as |color|}}
		    	<button 
		    		class="color-swatch"
		    		style="background-color: {{color.color}}"
		    		onclick={{action "updateActiveStrokeColor"}}
		    		value={{color.color}}
		    	></button>
		  	{{/each}}
	  	</section>
	</div>
	<div class="configuration__stroke_width category">
		<h3>Stroke Width:</h3>
		<p>{{strokeWidth}}</p>
		<input 
			type="range" 
			id="start" 
			name="stroke-width"
		    min="2" 
		    max="10"
		    value={{strokeWidth}}
		>
	</div>

</section>